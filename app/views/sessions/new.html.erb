<div class="container">
    <div class="row center pt-30">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <h3 class="header">Login</h3>

                <div class="row">
                    <%= form_for(:sessions, html: { class: "col s12" }) do |f| %>

                    <div class="row">
                        <div class="input-field col s12">
                            <%= f.email_field :email, autofocus: true %>
                            <%= f.label :email %>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <%= f.password_field :password %>
                            <%= f.label :password %>
                        </div>
                    </div>

                    <%= f.button '<i class="material-icons right">arrow_forward</i>Login'.html_safe, 
                        class: "btn orange waves-effect waves-light" %>

                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>