<%= render 'shared/error', obj: @student %>

<div class="container">
    <div class="row center pt-30">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <h3 class="header"><%= @student.new_record? ? "Sign Up" : "Edit Profile" %></h3>

                <div class="row">
                    <%= form_for(@student, html: { class: "col s12" }) do |f| %>

                    <div class="row">
                        <div class="input-field col s12">
                            <%= f.text_field :name %>
                            <%= f.label :name, class: "active" %>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <%= f.email_field :email %>
                            <%= f.label :email, class: "active" %>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <%= f.password_field :password, placeholder: "Enter Password" %>
                            <%= f.label :password, class: "active" %>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <%= f.password_field :password_confirmation, placeholder: "Re-enter Password" %>
                            <%= f.label :password_confirmation, class: "active" %>
                        </div>
                    </div>

                    <%= f.button(@student.new_record? ? '<i class="material-icons right">arrow_forward</i>Sign Up'.html_safe : '<i class="material-icons right">arrow_forward</i>Submit'.html_safe, 
                        class: "btn orange waves-effect waves-light") %>

                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>