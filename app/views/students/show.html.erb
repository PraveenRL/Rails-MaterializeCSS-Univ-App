<div class="row pt-30">
    <div class="col s6 m6"> 
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Name: <%= @student.name %></span>
                <p>Email: <%= @student.email %></p>
                <br>
                <p>Course Enrollments: 
                    <% if @student.courses.empty? %>
                        None
                    <% else %>
                        <ol>
                            <% @student.courses.each do |course| %>
                                <li><%= course.name %></li>
                            <% end %>
                        </ol>
                    <% end %>
                </p>
            </div>
        </div>
        <% if current_user == @student %>
            <%= link_to '<i class="material-icons right">edit</i>Edit your profile'.html_safe,
                edit_student_path(@student), class: "waves-effect waves-light btn" %>
        <% end %>
    </div>
</div>